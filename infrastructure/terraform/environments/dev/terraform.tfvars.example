# Example Terraform variables for development environment
# Copy this file to terraform.tfvars and customize the values

# Cluster Configuration
cluster_name = "msdp-eks-dev"
aws_region   = "us-west-2"
vpc_cidr     = "10.0.0.0/16"

# Kubernetes Configuration
kubernetes_version = "1.28"
karpenter_version  = "0.37.0"

# Instance Types for Karpenter - Memory-optimized ARM-based with t4g preference
karpenter_instance_types = [
  # t4g instances (preferred) - General purpose with good memory
  "t4g.medium",
  "t4g.large", 
  "t4g.xlarge",
  "t4g.2xlarge",
  "t4g.4xlarge",
  
  # r6g instances - Memory-optimized (high memory to CPU ratio)
  "r6g.medium",
  "r6g.large",
  "r6g.xlarge", 
  "r6g.2xlarge",
  "r6g.4xlarge",
  "r6g.8xlarge",
  "r6g.12xlarge",
  "r6g.16xlarge",
  
  # m6g instances - Balanced memory and compute
  "m6g.medium",
  "m6g.large",
  "m6g.xlarge",
  "m6g.2xlarge",
  "m6g.4xlarge",
  "m6g.8xlarge",
  "m6g.12xlarge",
  "m6g.16xlarge"
]

# AWS Auth Users (optional)
# aws_auth_users = [
#   {
#     userarn  = "arn:aws:iam::123456789012:user/developer"
#     username = "developer"
#     groups   = ["system:masters"]
#   }
# ]

# DNS and Certificate Configuration
domain_name = "your-domain.com"
create_route53_zone = true
create_acm_certificate = true
letsencrypt_email = "admin@your-domain.com"
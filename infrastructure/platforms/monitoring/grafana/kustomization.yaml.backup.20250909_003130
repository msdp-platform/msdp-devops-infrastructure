apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
metadata:
  name: grafana
  annotations:
    config.kubernetes.io/local-config: "true"
resources: []
# Helm chart configuration
helmCharts:
  - name: grafana
    repo: https://grafana.github.io/helm-charts
    version: 6.61.0
    releaseName: grafana
    namespace: monitoring
    valuesFile: helm-values.yaml
namespace: monitoring
